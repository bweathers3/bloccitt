
<h1>New Questions</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for QuestionsControllers</p>
     <ul>
       <li>Please submit your questions.</li>
       <li>We will respond as soon as we can.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @question do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter your question title" %>
       </div>

       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter your question" %>
       </div>


       <div class="form-group">
         <%= f.label :resolved %>
         <%= f.check_box :resolved, rows: 8, class: 'form-control', placeholder: "Please confirm the question is resolved" %>
       </div>

       <div class="form-group">

         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
